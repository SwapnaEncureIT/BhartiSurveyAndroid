<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.encureit.samtadoot">

    <application
        android:name="com.encureit.samtadoot.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">

        <activity android:name="com.encureit.samtadoot.features.subforms.QuesSectionListActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            />

        <activity android:name="com.encureit.samtadoot.features.setting.SettingsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            />

        <activity android:name="com.encureit.samtadoot.features.dashboard.DashboardActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            />

        <activity
            android:name="com.encureit.samtadoot.login.OtpCheckActivity"
            android:screenOrientation="fullSensor"
            android:exported="true" />
        <activity
            android:name="com.encureit.samtadoot.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
             />
        <activity
            android:name="com.encureit.samtadoot.base.SplashActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.encureit.samtadoot.MainActivity"
            android:exported="true" /> <!-- receivers -->
        <receiver
            android:name="com.encureit.samtadoot.recievers.MessageReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>